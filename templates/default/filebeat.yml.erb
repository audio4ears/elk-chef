filebeat:
  prospectors:
    -
    <% if node['beats']['filebeat']['prospectors'].include?('linux') -%>
      paths:
        - /var/log/*.log
      input_type: log
      fields:
        environment: <%= node['domain'] %>
        datacenter: vagrant
        service: linux
      document_type: log
    <% end -%>
  registry_file: /var/lib/filebeat/registry

output:
  logstash:
    hosts: ["localhost:5044"]
    index: filebeat
  console:
    pretty: true

logging:
  level: warning
  to_syslog: false
  to_files: true
  files:
    rotateeverybytes: 10485760 # = 10MB
    keepfiles: 7
